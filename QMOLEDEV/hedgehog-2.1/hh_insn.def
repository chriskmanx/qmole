EXT_INSN(crypto_hash,
    HH_PURE,
    {
      unsigned char buf[32];

      HH_CHECK(accu, HH_WORD_IS_PTR(accu), HH_ERROR_EXPECT_STRING);
      HH_CHECK(accu, HH_IS_STRING(accu_as_ptr), HH_ERROR_EXPECT_STRING);

      /* We assume the string length is within the small integer
         range from -2^30 to 2^30-1 */
      HH_RESERVE(HH_STRING_N_WORDS(32));
      hh_sha256(HH_STRING_PTR(accu_as_ptr),
		HH_STRING_LEN(accu_as_ptr),
		buf);
      accu = hh_box_string(ctx, buf, 32);
      goto reserve_and_accu_to_ptr;
    })

EXT_INSN(crypto_cipher,
    0,
    {
      hh_word_t *buf;
      hh_word_t buf_len;

      HH_CHECK(accu, HH_WORD_IS_PTR(accu), HH_ERROR_EXPECT_STRING);
      HH_CHECK(accu, HH_IS_STRING(accu_as_ptr), HH_ERROR_EXPECT_STRING);

      if (HH_STRING_LEN(accu_as_ptr) < 16)
	goto crypto_cipher_failure;

      HH_CHECK(sp[-2], HH_WORD_IS_PTR(sp[-2]), HH_ERROR_EXPECT_STRING);
      HH_CHECK(sp[-2], HH_IS_STRING(HH_WORD_TO_PTR(ctx, sp[-2])),
	       HH_ERROR_EXPECT_STRING);

      w = HH_STRING_LEN(HH_WORD_TO_PTR(ctx, sp[-2]));
      HH_RESERVE(HH_STRING_N_WORDS(w + 19));
      buf = hh_alloc_string(ctx, w + 19);

      if (hh_xxtea(HH_STRING_PTR(HH_WORD_TO_PTR(ctx, sp[-2])), w,
		   HH_STRING_PTR(buf), &buf_len,
		   !HH_IS_FALSE(sp[-1]),
		   HH_STRING_PTR(accu_as_ptr))) {
	buf[0] = HH_STRING_HDR(buf_len);
	accu = HH_PTR_TO_WORD(ctx, buf, 0x04);
      } else {
      crypto_cipher_failure:
	accu = HH_NIL;
      }
      sp -= 2;
      goto reserve_and_maybe_accu_to_ptr;
    })

