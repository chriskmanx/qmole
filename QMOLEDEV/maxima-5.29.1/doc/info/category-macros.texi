@macro opencatbox {}
@ifhtml
@html
<div class=categorybox>
@end html
@end ifhtml
@end macro

@macro category {name}
@ifhtml
@html
&middot;
@end html
@ref{Category: \name\}
@end ifhtml
@end macro

@macro closecatbox {}
@ifhtml
@html
</div>
@end html
@end ifhtml
@end macro

@c Macros for cross references

@macro mref {nodename}
@ifhtml
@code{@ref{\nodename\}}
@end ifhtml
@ifnothtml
@code{\nodename\}
@end ifnothtml
@end macro

@macro mxref {nodename, text}
@ifhtml
@code{@ref{\nodename\, \text\}}
@end ifhtml
@ifnothtml
@code{\text\}
@end ifnothtml
@end macro

